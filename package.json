{
  "id": "7848B8AC",
  "name": "bicrypto",
  "private": true,
  "version": "5.1.8",
  "scripts": {
    "dev": "concurrently \"pnpm --filter frontend dev\" \"pnpm --filter backend dev\"",
    "dev:backend": "pnpm --filter backend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build:all": "NODE_OPTIONS='--max-old-space-size=4096' pnpm --filter frontend build && pnpm --filter backend build",
    "build:backend": "pnpm --filter backend build",
    "build:frontend": "NODE_OPTIONS='--max-old-space-size=4096' pnpm --filter frontend build",
    "build:permission": "node tools/build-permission.js",
    "start": "pm2 start production.config.js --env production",
    "start:thread": "pm2 start production.thread.config.js --env production",
    "start:frontend": "pnpm --filter frontend start",
    "start:backend": "pnpm --filter backend start",
    "stop": "pm2 stop all",
    "updator": "NODE_OPTIONS='--max-old-space-size=4096' pnpm stop && pnpm build:backend && pnpm start:backend && node -e \"console.log('⏳ Waiting 30 seconds before seeding...'); setTimeout(() => { console.log('✅ Wait complete, proceeding with seed...'); process.exit(0); }, 30000)\" && pnpm stop && pnpm seed && pnpm build:all && pnpm start",
    "seed": "pnpm --filter backend seed",
    "test": "pnpm --filter backend test",
    "test:watch": "pnpm --filter backend test:watch",
    "test:coverage": "pnpm --filter backend test:coverage",
    "test:integration": "pnpm --filter backend test:integration",
    "test:unit": "pnpm --filter backend test:unit",
    "extract:permission": "node tools/extract-permission.js",
    "translations:sync": "node tools/manage-translations.js sync",
    "translations:extract": "node tools/manage-translations.js extract",
    "translations:untranslated": "node tools/manage-translations.js untranslated",
    "translations:translate": "node tools/manage-translations.js translate",
    "translations:report": "node tools/manage-translations.js report",
    "translations:fix-keys": "node tools/manage-translations.js fix-keys",
    "translations:find-bad-keys": "node tools/manage-translations.js find-bad-keys",
    "translations:fix-bad-keys": "node tools/manage-translations.js fix-bad-keys",
    "translations:migrate": "node tools/manage-translations.js migrate",
    "translations:full": "node tools/manage-translations.js full",
    "format": "prettier --write \"frontend/**/*.{ts,tsx,md,mdx,css,scss}\" --ignore-path .prettierignore",
    "lint": "eslint frontend --fix --ignore-pattern '!frontend/**/*.{ts,tsx}'"
  },
